<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Web Demo Suite" verbose="0" parallel="tests"
	thread-count="10">
	<listeners>
        <listener class-name="listerners.TestListener"/>
		<listener class-name="com.quantum.listeners.QuantumReportiumListener" />
	</listeners>

	<test name="iOS  Test 1" enabled="true"
				 thread-count="10">
	<parameter name="driver.capabilities.deviceName" value=""></parameter>
	<groups>
		<run>
			<include name="@Test_1" />
            <include name="@Test_2" />
            <include name="@Test_3" />
        </run>
	</groups>
	<classes>
		<class
				name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory" />
	</classes>
</test>
	<test name="iOS  Test 2" enabled="true"
		  thread-count="10">
		<parameter name="driver.capabilities.deviceName" value=""></parameter>
		<groups>
            <run>
                <include name="@Test_1" />
                <include name="@Test_2" />
                <include name="@Test_3" />
            </run>
		</groups>
		<classes>
			<class
					name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory" />
		</classes>
	</test>
	<test name="Android Test 1" enabled="true" thread-count="10">
		<parameter name="driver.capabilities.deviceName" value=""></parameter>
		<groups>
            <run>
                <include name="@Test_1" />
                <include name="@Test_2" />
                <include name="@Test_3" />
            </run>
		</groups>
		<classes>
			<class
				name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory" />
		</classes>
	</test>
	<test name="Android Test 2" enabled="true" thread-count="10">
		<!--Galaxy 6-->
		<parameter name="driver.capabilities.deviceName" value="05157DF5399ED633"></parameter>
		<groups>
            <run>
                <include name="@Test_1" />
                <include name="@Test_2" />
                <include name="@Test_3" />
            </run>
		</groups>
		<classes>
			<class
					name="com.qmetry.qaf.automation.step.client.gherkin.GherkinScenarioFactory" />
		</classes>
	</test>
</suite>
